{% extends 'base.html.twig' %}

{% block title %}New Conversation !{% endblock %}

{% form_theme formGroup 'bootstrap_5_horizontal_layout.html.twig' %}

{% block body %}
<body class="d-flex justify-content-center align-items-center vh-100">
    <div class="w-400 p-5 shadow rounded">
        <div class="d-flex justify-content-center align-items-center flex-column">
            <img src="{{ asset('assets/img/logo.png') }}" class="w-25">
            <h3 class="display-4 fs-1 text-center">Nouvelle Conversation</h3>
        </div>
        {{ form_start(formGroup) }}
        <div class="mb-3">
            <label class="form-label">Nom</label>
            {{ form_widget(formGroup.name) }}
        </div>

        <div class="mb-3">
            <label class="form-label">Utilisateurs</label>
            {{ form_widget(formGroup.user_to_groups ) }}
        </div>

        <div class="d-flex justify-content-center align-items-center">
            <button type="submit" class=" btn btn-primary">Cr√©e</button>
            <a href="{{ path('home') }}" style="margin-left: 20px">Retour</a>
        </div>
        {{ form_end(formGroup) }}
    </div>
    {% block modal %}
        {{ render(controller( 'App\\Controller\\FrontChatController::chatApp' )) }}
    {% endblock %}
    {% block javascripts %}
        <script>
            $(".chosen-select").chosen({value: "Select"});
        </script>
    {% endblock javascripts%}
</body>
{% endblock %}
