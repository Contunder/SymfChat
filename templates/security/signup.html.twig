{% extends 'base.html.twig' %}

{% block title %}Signup !{% endblock %}

{% form_theme FormUser 'bootstrap_5_horizontal_layout.html.twig' %}

{% block body %}
    <body class="d-flex justify-content-center align-items-center vh-100">
        <div class="w-400 p-5 shadow rounded">
            <div class="d-flex justify-content-center align-items-center flex-column">
                <img src="{{ asset('assets/img/logo.png') }}" class="w-25" alt="Logo" />
                <h3 class="display-4 fs-1 text-center">S'enregistrer</h3>
            </div>

            {% if errors %}
            {% for error in errors %}
            <div class="alert alert-warning" role="alert">
                {{ error.message }}
            </div>
            {% endfor %}
            {% endif %}

            {{ form_start(FormUser) }}

            <div class="mb-3">
                <label class="form-label">Nom d'Utilisateur</label>
                {{ form_widget(FormUser.username) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Nom</label>
                {{ form_widget(FormUser.lastname) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Pr√©nom</label>
                {{ form_widget(FormUser.name) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                {{ form_widget(FormUser.email) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Mot de Passe</label>
                {{ form_widget(FormUser.password) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmation du Mot de Passe</label>
                {{ form_widget(FormUser.confirm_password) }}
            </div>

            <div class="mb-3">
                <label class="form-label">Photo de Profils</label>
                {{ form_widget(FormUser.pp) }}
            </div>

            <div class="d-flex justify-content-center align-items-center">
                <button type="submit" class="btn btn-primary">S'enregistrer</button>
                <input type="hidden" name="_target_path" value="{{ path('home') }}"/>
                <a href="{{ path('security_login') }}" class="m-3">Se Connecter</a>
            </div>
            {{ form_end(FormUser) }}
        </div>
    </body>
{% endblock %}